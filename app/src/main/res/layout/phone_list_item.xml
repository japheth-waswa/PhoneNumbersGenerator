<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="11dp"
    android:background="@color/listItemcolor">


    <ImageView android:id="@+id/contactImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_contact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <TextView android:id="@+id/contactsPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contactImageView"
        android:text="jefflilcot"/>

    <TextView android:id="@+id/contactCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contactImageView"
        android:layout_below="@+id/contactsPhoneNumber"
        android:layout_marginTop="5dp"
        android:text="pace of mind"/>


</RelativeLayout>
